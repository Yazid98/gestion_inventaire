<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Poids</th>
      <th>Longueur</th>
      <th>Details de stockage</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.picture %></td>
        <td><%= item.weight %></td>
        <td><%= item.length %></td>
        <td><%= item.storage_detail %></td>
        <td><%= link_to 'Voir', item, class:"btn btn-primary" %></td>
        <td><%= link_to 'Modifier', edit_item_path(item), class:"btn btn-warning" %></td>
        <td><%= link_to 'Supprimer', item, method: :delete, class:"btn btn-danger", data: { confirm: 'Êtes vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau', new_item_path, class:"btn btn-secondary" %>
