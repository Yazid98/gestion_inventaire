<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>Nom</th>
      <th>Adresse</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= link_to 'Voir', building, class:"btn btn-primary" %></td>
        <td><%= link_to 'Modifier', edit_building_path(building), class:"btn btn-warning"  %></td>
        <td><%= link_to 'Supprimer', building, method: :delete, class:"btn btn-danger",  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau Building', new_building_path, class:"btn btn-secondary" %>
